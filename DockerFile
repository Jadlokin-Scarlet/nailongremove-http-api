# 使用官方 Python 3 镜像
FROM python:3.10

RUN pip install pysocks

# 复制代理环境变量
ARG _http_proxy
ARG _https_proxy

ARG http_proxy=${_http_proxy}
ARG https_proxy=${_https_proxy}
ENV http_proxy=${_http_proxy}
ENV https_proxy=${_https_proxy}

# 安装必要的包
RUN pip install --upgrade pip
RUN pip install --no-cache-dir requests opencv-python-headless flask flask[async] Pillow torch torchvision pydantic githubkit tqdm httpx[socks]
RUN pip install --no-cache-dir python-dotenv


# 设置工作目录
WORKDIR /app/nailongremove_http_api

# 复制当前目录下的所有文件到容器中
COPY . /app
RUN echo -e 'PROXY=${_http_proxy}' > .env

# 暴露应用运行的端口（如果需要）
EXPOSE 8081

# 运行应用
CMD ["python", "-m", "http_main"]

# docker build -f DockerFile --build-arg _http_proxy=${http_proxy} --build-arg _https_proxy=${https_proxy} -t nailongremove-http-api .
